generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Usando PostgreSQL como banco de dados
  url      = env("DATABASE_URL") // URL do banco de dados PostgreSQL
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique // Limita o tamanho do email
  password      String?                             // Limita o tamanho da senha
  googleId      String?        @unique
  name          String?
  picture       String?
  subscriptions Subscription[]
}

model Subscription {
  id        Int      @id @default(autoincrement())
  type      String
  startDate DateTime
  endDate   DateTime
  status    Boolean
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Component {
  id          Int      @id @default(autoincrement())
  name        String
  cssContent  String
  category    String   @default("Outros")
  color       String   @default("#6366F1")
  // Fields might be different in your actual schema
}

model Setting {
  id        Int      @id @default(autoincrement())
  section   String
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([section, key])
}
